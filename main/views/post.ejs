        <script>
        function submitComment() {
            var formData = new FormData(document.getElementById('comment-form'));
            var pid = formData.get('pid');
            var content = formData.get('content');
    
            var url = `/list/addreply?pid=${pid}&content=${encodeURIComponent(content)}`;
    
            fetch(url, {
                method: 'GET',
            })
            .then(response => response.json())
            .then(data => {
                if (data.code === 0) {
                    // 成功回复，刷新评论区
                    updateComments(pid);
                    document.getElementById('content').value = '';
                } else {
                    alert(data.msg);
                    window.location.href = `/list/${pid}.html?msg=${data.msg}`;
                }
            })
            .catch(error => {
                console.error('Error:', error);
                alert('回复失败，请重新尝试');
                window.location.href = `/list/${pid}.html?msg=回复失败，请重新尝试`;
            });
        }
    
        function updateComments(pid) {
            fetch(`/list/r_update?pid=${pid}`)
            .then(response => response.json())
            .then(comments => {
                var commentsDiv = document.querySelector('.comments');
                commentsDiv.innerHTML = '';
                comments.forEach(comment => {
                    var commentHtml = `
                        <div class="comment">
                            <div class="comment-header">
                                <img src="../img/用户.jpg" alt="Avatar" class="avatar">
                                <span class="name">${comment.username}</span>
                            </div>
                            <hr>
                            <p class="comment-content">${comment.content}</p>
                        </div>
                    `;
                    commentsDiv.insertAdjacentHTML('beforeend', commentHtml);
                });
            })
            .catch(error => console.error('Error:', error));
        }
    </script>
