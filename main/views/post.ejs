    <script>
    document.addEventListener('DOMContentLoaded', function() {
        const postId = <%= data[0].id %>;
        const userId = <%= (user && user.uid) ? user.uid : 'null' %>;
        const likeBtn = document.getElementById('41');
        const collectBtn = document.getElementById('42');
        const likeImg = document.getElementById('myImage7');
        const collectImg = document.getElementById('myImage8');
        const heatSpan = document.querySelector('.heat');

        // 初始化按钮状态
        async function initPostActions() {
            if (!userId || userId === 'null') return;
            try {
                const state = await initializePostState(postId, userId);
                if (state.is_liked) {
                    likeImg.src = '../img/点赞.png';
                    likeBtn.classList.add('active');
                } else {
                    likeImg.src = '../img/赞.png';
                    likeBtn.classList.remove('active');
                }
                if (state.is_collected) {
                    collectImg.src = '../img/收藏1.png';
                    collectBtn.classList.add('active');
                } else {
                    collectImg.src = '../img/收藏.png';
                    collectBtn.classList.remove('active');
                }
            } catch (e) {
                console.error(e);
            }
        }

        // 点赞/取消点赞
        likeBtn.addEventListener('click', async function() {
            console.log('收到点击点赞按钮');
            if (!userId || userId === 'null') {
                alert('请先登录');
                return;
            }
            const isActive = !likeBtn.classList.contains('active');
            try {
                await handlePostAction(postId, 'like', isActive);
                likeBtn.classList.toggle('active', isActive);
                likeImg.src = isActive ? '../img/点赞.png' : '../img/赞.png';
                updateHeat();
            } catch (e) {
                alert('操作失败');
            }
        });

        // 收藏/取消收藏
        collectBtn.addEventListener('click', async function() {
            console.log('收到点击收藏按钮');
            if (!userId || userId === 'null') {
                alert('请先登录');
                return;
            }
            const isActive = !collectBtn.classList.contains('active');
            try {
                await handlePostAction(postId, 'collection', isActive);
                collectBtn.classList.toggle('active', isActive);
                collectImg.src = isActive ? '../img/收藏1.png' : '../img/收藏.png';
                updateHeat();
            } catch (e) {
                alert('操作失败');
            }
        });

        // 获取并更新热度
        async function updateHeat() {
            try {
                const res = await fetch(`/list/api/post/heat?postId=${postId}`);
                const data = await res.json();
                if (heatSpan) {
                    heatSpan.innerHTML = `<img src="../img/火焰-copy.png" style="width: 18px;"> ${data.heat}`;
                }
            } catch (e) {}
        }

        // --- 下面是API调用函数 ---
        async function handlePostAction(postId, type, isActive) {
            const response = await fetch('/list/api/post/action', {
                method: 'POST',
                headers: { 'Content-Type': 'application/json' },
                body: JSON.stringify({ postId, type, isActive })
            });
            if (!response.ok) throw new Error('操作失败');
            return await response.json();
        }

        async function initializePostState(postId, userId) {
            const response = await fetch(`/list/api/post/state?postId=${postId}&userId=${userId}`);
